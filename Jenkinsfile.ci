pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    cd bank-portal-frontend-repo
                    npm install
                '''
            }
        }

        stage('Build Vite App') {
            steps {
                sh '''
                    cd bank-portal-frontend-repo
                    npm run build
                '''
            }
        }

        stage('Archive Build Artifacts') {
            steps {
                archiveArtifacts artifacts: 'dist/**', fingerprint: true
            }
        }
    }

    post {
        success {
            build job: 'bank-portal-frontend-cd'
        }
    }
}
